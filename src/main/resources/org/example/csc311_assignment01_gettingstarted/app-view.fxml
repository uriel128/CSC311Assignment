<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.csc311_assignment01_gettingstarted.AppController"
stylesheets="@appstyle.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextField fx:id="numOneField" promptText="Enter first number"/>
    <TextField fx:id="numTwoField" promptText="Enter second number"/>

    <Button text="Calculate Sum" onAction="#onCalculateButtonClick"/>
    <Label fx:id="message"/>
</VBox>
